    <style>
        .chatbot-msg-user {
            background: #007bff;
            color: #fff;
            border-radius: 15px 15px 0 15px;
            padding: 8px 14px;
            margin-bottom: 8px;
            max-width: 80%;
            align-self: flex-end;
            margin-left: 20%;
            word-break: break-word;
        }

        .chatbot-msg-bot {
            background: #fff;
            color: #222;
            border-radius: 15px 15px 15px 0;
            padding: 8px 14px;
            margin-bottom: 8px;
            max-width: 80%;
            align-self: flex-start;
            margin-right: 20%;
            border: 1px solid #eee;
            word-break: break-word;
        }

        #chatbot-messages {
            display: flex;
            flex-direction: column;
        }

        #chatbot-send {
            background: #007bff;
            color: #fff;
            border: none;
            border-radius: 20px;
            padding: 5px 0;
            cursor: pointer;
            transition: background 0.2s;
        }

            #chatbot-send:hover {
                background: #0056b3;
            }

        #chatbot-input {
            border-radius: 20px;
            border: 1px solid #ccc;
            padding: 5px;
            outline: none;
        }
    </style>
</head>
